<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="70dp"
        android:background="@drawable/icon"
        android:text="Tint"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/girl"
        android:layout_toRightOf="@+id/v2"
        android:layout_toEndOf="@+id/v2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="取出颜色"
        android:layout_alignBottom="@+id/iv"
        android:layout_alignLeft="@+id/v3"
        android:layout_alignStart="@+id/v3"/>

    <TextView
        android:id="@+id/v1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/button"
        android:layout_marginLeft="30dp"
        android:background="#fff"/>

    <TextView
        android:id="@+id/v2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/button"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/v1"
        android:background="#fff"/>

    <TextView
        android:id="@+id/v3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/button"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/v2"
        android:background="#fff"/>

    <TextView
        android:id="@+id/v4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/v1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="#fff"/>

    <TextView
        android:id="@+id/v5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/v2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/v4"
        android:background="#fff"/>

    <TextView
        android:id="@+id/v6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/v3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/v5"
        android:background="#fff"/>

</RelativeLayout>
